{% if shelf %}
<ul>
{% for book in shelf %}
	<li class="book--grid">
		<a href="{{book.url}}" class="book--grid__inner">
			<img src="{{book.data.cover}}" width="150"/>
			<div>
				{{book.data.title}}
			({{book.data.pubdate | readableDate: "yyyy"}})
			</div>
		</a>
	</li>
{% endfor %}
</ul>
{% else %}
no books
{% endif %}
